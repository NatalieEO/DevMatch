<div class="container">
   <div class="row">
      <div class="col-md-8 col-md-offset-2">
         <ul class="list-unstyled">
            
            <!-- Loop through array like structure of all the users -->
            <% @users.each do |user| %>
            
               <!-- Profile has to be made to browse the community page -->
               <% if user.profile %>
                  <li>
                     <!-- Can use cycle ruby function inside each loops -->
                     <div class="well row <%= cycle('white-bg', '') %>">
                        <div class="col-sm-4 text-center"> <!-- col needs row to be parent class -->
                           <!-- If the user has an avatar, display it -->
                           <% if user.profile.avatar %>
                              <%= link_to user do %>
                                 <%= image_tag user.profile.avatar.url, class: 'user-index-avatar' %>
                              <% end %>
                           <% end %>
                        </div>
                        
                        <div>
                           <%= link_to user do %>
                              <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                           <% end %>
                           <p>
                              <%= user.profile.job_title %>
                              <!-- Indicates whether user listed on index is a Pro member -->
                              <% if user.plan_id. == 2 %>
                                 <span class="label label-danger">PRO</span>
                              <% end %>
                           </p>
                        </div>
                     </div>
                  </li>
               <% end %>
            <% end %>
         </ul>
      </div>
   </div>
</div>