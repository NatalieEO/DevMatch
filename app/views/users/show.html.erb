<!-- Corresponds to users_controller.erb file -->

<%= image_tag @user.profile.avatar.url %>
<!-- user can have .profile because a user has a profile in the database -->
<%= @user.profile.first_name %> <%= @user.profile.last_name %>
<%= @user.profile.job_title %>

<!-- If the user that is currently signed in has pro plan account, they can see the
phone number and email of the user's profile they are trying to view -->
<% if current_user.plan_id == 2 %>
   <%= @user.profile.phone_number %><br/>
   <%= @user.profile.contact_email %><br/>
<% end %>

<%= @user.profile.description %>