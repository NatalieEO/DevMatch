<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
      <!-- Conditional to choose which copy to show -->
        <%if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the pro account for $10/month and get access to the community and contact information!</p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up for free and get basic access to the community.</p>
        <% end %>
      </div>  
      
      <div class="well">
        <!-- Conditional statement using information produced from home.html.erb. Renders partial HTML file-->
        <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>  
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
